<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountEditActivity"
    android:fitsSystemWindows="true"
    android:background="@drawable/bg_accent">

    <!-- Body -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Header -->
        <RelativeLayout android:id="@+id/rl_top_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="48dp"
            android:paddingHorizontal="24dp"
            android:paddingBottom="24dp"
            android:gravity="center">

            <TextView
                android:layout_toRightOf="@id/btn_about_back"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Tentang" />

            <ImageView
                android:id="@+id/btn_about_back"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="24dp"
                android:src="@drawable/ic_btn_back_48" />

        </RelativeLayout>

        <!-- Content -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@id/rl_top_header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            android:background="@drawable/bg_corner_card"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:src="@drawable/img_logo_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_primary"
                android:lineSpacingMultiplier="0"
                android:lineSpacingExtra="24sp"
                android:justificationMode="inter_word"
                android:text="@string/app_about"/>

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>